
@{
    ViewBag.Title = "Редагування";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string[] themes = File.ReadAllLines(Server.MapPath("~/App_Data/Themes.txt"));
    string[] cities = File.ReadAllLines(Server.MapPath("~/App_Data/c.txt"));
}
@model fww.Models.Ad

<div class="content-new">
    <form method="post" action="/MyAds/Edit">
        <div class="left-box-new">
            <div class="div-new">
                <label for="title">Назва оголошення</label>
                <input name="Title" id="title" type="text" value="@Model.Title" class="title-input-new" />
            </div>
            <div class="div-new">
                <label for="text">Текст</label>
                <textarea name="Text" id="text" placeholder="впишіть тут.." class="message-input-new">@Model.Text</textarea>
            </div>
        </div>

        <div class="right-box-new">
            <div class="div-new">
                <label for="theme">Тема</label>
                <select name="Theme" id="theme" class="select-new">
                    @foreach (string item in themes)
                    {
                        if (Model.Theme == item)
                        {
                        <option selected value="@item">@item</option> }
                        else
                        {
                        <option value="@item">@item</option> }
                    }
                </select>
            </div>
            <div class="div-new">
                <label for="keywords">Ключові слова</label>
                <input name="Keywords" id="keywords" type="text" value="@Model.Keywords" class="keywords-input-new" />
            </div>
            <div class="div-new">
                <label for="location">Місце розташування</label>
                <select name="Location" class="select-new">
                    @foreach (string item in cities)
                    {
                        if (Model.Location == item)
                        {
                            <option selected value="@item">@item</option> }
                        else
                        {
                            <option value="@item">@item</option> }
                    }
                </select>
            </div>

            <div class="upload-div-new">
                <label for="file">Зображення</label>
                <label for="file" class="upload-label">Обрати</label>
                <input id="file" type="file" name="file" class="upload" />
            </div>

            <div class="btn-div-new">
                <input name="Id" type="hidden" value="@Model.Id" />
                <input name="deleteButton" onclick="window.location.href = '/MyAds/Delete/@Model.Id'" type="button" value="Видалити" class="button-delete" />
                <input name="editButton" type="submit" value="Зберегти зміни" class="button-save-edit" />
            </div>
            
        </div>
        <div class="footer-new"></div>
    </form>
</div>
